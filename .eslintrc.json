{
    "root": true,
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended"
        // "plugin:prettier/recommended"
    ],
    "plugins": [
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": [
        ".eslintrc.js"
    ],
    "rules": {
        "no-unused-vars": "off",
        "prettier/prettier": [
            "warn",
            {
                "singleQuote": true,
                "trailingComma": "none",
                "printWidth": 100,
                "tabWidth": 3,
                "semi": false
            }
        ]
        //       //   "no-console": "error"
        //       "allow": ["warn", "error"]
    }
}